%html
  %head
    %title MapEngine | Enhance Your Data
    %meta{'http-equiv' => 'Content-Type', :content => "text/html; charset=utf-8"}
    %link(rel="stylesheet" href="http://fonts.googleapis.com/css?family=Racing+Sans+One|Yanone+Kaffeesatz")
    = stylesheet_link_tag "application", :media => "screen"
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    = csrf_meta_tags

  %body
    .wrapper
      .navbar.navbar-fixed-top{:role => "navigation"}
        .container
          .navbar-header
            = render :partial => "layouts/menu"
          .menu-container.collapse.navbar-collapse
            = render :partial => "layouts/session"


      = yield
      .footer
        %span &copy; 2013 MapEngine


    = yield :js_data
    = yield :scripts
